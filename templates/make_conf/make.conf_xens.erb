LINGUAS="de de_CH fr fr_CH es es_ES es_MX en en_US"
LANG="de_CH"
#
FEATURES="loadpolicy"
#
USE="userlocales -multilib unicode nls pcre nptl nptlonly pam apache2 -ipv6"
#
CONFIG_PROTECT_MASK="/etc/wget /etc/dev.d /etc/env.d /etc/gpm /etc/hotplug.d /etc/mail /etc/skel /etc/terminfo /etc/udev "
#
#
PORTDIR=/mnt/nfs_portage
PKGDIR=/mnt/nfs_portage/packages
DISTDIR=/mnt/nfs_portage/distfiles
